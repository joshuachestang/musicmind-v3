<h2>Users</h2>
<% unless @search_users.nil? %>
  <table id="search" class="table table-bordered">
    <tbody>
    <% @search_users.each do |result_item| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <% if result_item.user_image.present? %>
        <td><%= link_to image_tag(result_item.user_image.url(:thumb)), user_path(result_item), remote: :true, :id => "page-link" %></td>
        <% end %>
        <td><%= link_to "#{result_item.email}", user_path(result_item), remote: :true, :id => "page-link" %></td>
        
      </tr>
    <% end %>
  </tbody>
  </table>
<% else %>
<p>Nothing Found</p>
<% end %>