  <% unless user_signed_in? %>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "login"}) do |f| %>
          <%= f.email_field :email, placeholder: "email", :class => "input-small" %>
          <%= f.password_field :password, placeholder: "password", :class => "input-small" %>
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me, :checked => true %> 
            <%= f.label :remember_me, :class => "checkbox" %>
          <% end %>
          <%= f.submit "Sign In", :class => "btn" %>
      <% end %>
      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "button facebook" %>
  <% end %>
    