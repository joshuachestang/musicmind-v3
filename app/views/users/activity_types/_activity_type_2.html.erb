
	<% @activities.each do |activity| %>
	<% if activity.key == "activity.songupvote.create" %>
	<% if current_user.following?(activity.owner) %>
<div id="feed-item" style="background-color:white;">  
    <h4 style="width:100%; margin-bottom:5px;"> 
        <%= link_to image_tag(activity.owner.user_image.url(:thumb_small)), user_path(activity.owner), remote: :true, :id => "page-link" %>   
    	<%= link_to "#{activity.owner.username}", user_path(activity.owner), remote: :true, :id => "page-link" %> <%= activity.text %> <%= time_ago_in_words(activity.created_at) %> ago.
    </h4>

     
     <div style="float:left; padding-left:90px; margin-right:4px;"><%= link_to image_tag(activity.trackable.master_song.song_art_work.url(:thumb_small)), master_song_path(activity.trackable.master_song), remote: :true, :id => "page-link" %>
	     <%= link_to "#{activity.trackable.master_song.title}", master_song_path(activity.trackable.master_song), remote: :true, :id => "page-link" %> by <%= link_to "#{activity.trackable.master_song.user.fan_base.name}", fan_base_path(activity.trackable.master_song.user.fan_base), remote: :true, :id => "page-link" %></div>
	 
	 <div style="float:right;padding-top:40px;">It has been upvoted <%= pluralize(activity.trackable.master_song.song_up_votes.count, "time") %>.</div>
</div> 
<% end %>
<% end %>
<% end %>


