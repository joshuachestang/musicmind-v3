<section id="search-main">

              <%= form_tag searches_path, method: :get, remote: :true do %>
                
                  <%= text_field_tag :query, params[:query], :placeholder => "Search Music, Artists, & Fans", :class => "input-large search-query" %>
                  <%= submit_tag "Search", name: nil, remote: :true, :class => "btn" %>
                
              <% end %>
                
            </section>